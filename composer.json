{
    "name": "webignition/php-basil-model-validator",
    "description": "Validator for basil language objects",
    "keywords": [],
    "homepage": "https://github.com/webignition/php-basil-model-validator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilModelValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilModelValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-mbstring": "*",
        "webignition/php-basil-models": ">=0.76,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.11.5",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan-mockery": "^0.11.1",
        "nyholm/psr7": "^1.1",
        "webignition/php-basil-model-factory": ">=0.23,<1",
        "webignition/php-basil-test-identifier-factory": ">=0.3,<1"
    }
}
